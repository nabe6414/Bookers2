<div class="container">
  <div class="row">
    <h1 class="col-10">Editing Book</h1>

    <div class="col-10">
    <%= form_with model: @book do |f| %>
      <label>Title</label>
      <%= f.text_field :title, class: "form-control" %>

      <label>Opinion</label>
      <%= f.text_area :body, class: "form-control" %>

      <%= f.submit "Update Book", class: "btn btn-success"%>
    <% end%>
    </div>
  </div>
</div>