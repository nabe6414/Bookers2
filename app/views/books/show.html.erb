<div class="container">
  <div class="row">
    <div class="col-3">
    <%= render 'shared/userinfo', user: @user %>
    <%= render 'shared/newpost', book: @post %>
    </div>

    <div class="col-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger"  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>