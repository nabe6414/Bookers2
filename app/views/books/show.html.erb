<p>
  <%= flash[:success_book] %>
  <%= flash[:update_book] %>
</p>
<div class="container">
  <div class="row">
    <div class="col-3">
    <%= render 'shared/userinfo', user: @user_info %>
    <%= render 'shared/newpost', book: @post %>
    </div>

    <div class="col-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to user_path(@book.user) do %>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>