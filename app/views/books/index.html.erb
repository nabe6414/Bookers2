<% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-3 col-sm-12 mx-auto">
    <%= render 'shared/userinfo', user: @user_info %>
    <%= render 'shared/newpost', book: @book %>
    </div>

    <div class="col-lg-8 col-sm-12 mx-autp">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-2"></th>
            <th class="col-4">Title</th>
            <th class="col-6">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>