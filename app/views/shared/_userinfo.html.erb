<h2>User info</h2>
<table class="table">
  <thead>
    <tr><%= image_tag user.get_profile_image(100,100) %><tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </thead>
</table>

<%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block mb-3" do %>
<i class="fas fa-user-cog"></i>
<% end %>